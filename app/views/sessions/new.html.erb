<header>
  <h1>Sign In</h1>
</header>

<%= form_tag(session_path) do %>
  <fieldset>
    <ol>
      <li>
        <%= label_tag :email_or_username, "Email/Username" %>
        <%= text_field_tag :email_or_username, nil, required: true %>
      </li>
      <li>
        <%= label_tag :password %>
        <%= password_field_tag :password, nil, required: true %>
      </li>
    </ol>
    <p>
      <%= submit_tag 'Sign In' %>
    </p>
  </fieldset>
<% end %>
<p>
  No account yet? <%= link_to 'Sign Up', signup_path, class: 'button' %>
</p>
